.container{
  display: flex;
  flex-direction: column
}
.head-image{
  width: 750rpx;
  height: 460rpx;
}

.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top:180rpx;
  opacity: 0.6;

}

.author-data{
  flex-direction: row;
  margin-left:30rpx;
  margin-top: 20rpx;
}
.avatar{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.content-text{
  font-size: 24rpx;
  color: #999;
  margin-left:20rpx;
}
.date{
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
  vertical-align: middle;
}
.title{
  font-size: 36rpx;
  margin-left:40rpx;
  font-weight: 700;
  margin-top:30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.tool{
  margin-top:20rpx;
}
.circle-image{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

/* circle-image下面的所有子元素的图片样式 */
.circle-image Image{
  width:90rpx;
  height: 90rpx;
}

.share-image{
  margin-left: 30rpx;
}

/* 分割横线 */
.horizon{
  width:660rpx;
  height: 1px;
  background-color:#e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;

}

.detail{
  color: #999;
  margin-left: 30rpx;
  margin-top: 24rpx;
  margin-right: 30rpx;
  letter-spacing: 2px;
  line-height: 44rpx;
}

