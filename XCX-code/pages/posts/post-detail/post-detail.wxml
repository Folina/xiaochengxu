<view class="container">
<image class="head-image" src="{{postData.headImage}}"></image>
<image  class="audio" src='/images/music/music-start.png'></image>
<view class="author-data">
<image class="avatar" src='/images/avatar/1.png'></image>
<text class="author">{{postData.author}}</text>
<text class="content-text">发表于</text>
<text class="date">{{postData.data}}</text>
</view>
<text class="title">哈哈哈哈</text>
<view class="tool">
  <view class="circle-image">

    <image wx:if="{{collected}}" catchtap='onCollectedTap' src='/images/icon/collection.png'> </image>
    <image wx:else catchtap='onCollectedTap' src='/images/icon/collection-anti.png'></image>
    <image catchtap='onShareTap' class="share-image" src='/images/icon/share.png'> </image>

  </view>
<view class="horizon"></view>
</view>
<text classs="detail">{{postData.detail}}</text>

</view>
